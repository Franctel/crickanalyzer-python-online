{% if areawise_report and areawise_report.chart_data %}
<div class="card">
    <div class="card-body">
        <h6 class="mb-4 text-15">Areawise Report</h6>

        <!-- Main Bar Chart -->
        <div id="areawise-bar-chart" class="apex-charts" 
             data-chart-data='{{ areawise_report.chart_data | tojson | safe }}'></div>

        <!-- Striker-wise Tables -->
        {% if areawise_report.strikers_data %}
            {% for striker, table_data in areawise_report.strikers_data.items() %}
            <div class="mt-6">
                <h6 class="mb-4 text-15 font-semibold">{{ striker }}</h6>
                <div class="overflow-x-auto">
                    <table class="w-full text-xs text-left rtl:text-right whitespace-nowrap">
                        <thead class="border-b border-slate-200 dark:border-zink-500">
                            <tr>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">Area Name</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">Runs</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">4s</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">6s</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">1s</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">2s</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">Strike Rate</th>
                                <th class="px-3.5 py-2.5 font-semibold text-slate-500 dark:text-zink-200">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in table_data %}
                            <tr>
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    {{ row.area_name }}
                                </td>

                                <!-- Runs -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    <div class="shot-bar w-20 h-4" 
                                         data-type="runs"
                                         data-chart-data='{{ {"series":[{"data":[row.runs]}]} | tojson | safe }}'></div>
                                </td>

                                <!-- 4s -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    <div class="shot-bar w-16 h-4" 
                                         data-type="fours"
                                         data-chart-data='{{ {"series":[{"data":[row.fours]}]} | tojson | safe }}'></div>
                                </td>

                                <!-- 6s -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    <div class="shot-bar w-16 h-4" 
                                         data-type="sixes"
                                         data-chart-data='{{ {"series":[{"data":[row.sixes]}]} | tojson | safe }}'></div>
                                </td>

                                <!-- 1s -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    <div class="shot-bar w-16 h-4" 
                                         data-type="ones"
                                         data-chart-data='{{ {"series":[{"data":[row.ones]}]} | tojson | safe }}'></div>
                                </td>

                                <!-- 2s -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    <div class="shot-bar w-16 h-4" 
                                         data-type="twos"
                                         data-chart-data='{{ {"series":[{"data":[row.twos]}]} | tojson | safe }}'></div>
                                </td>

                                <!-- Strike Rate -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    {{ row.strike_rate }}
                                </td>

                                <!-- Actions -->
                                <td class="px-3.5 py-2.5 border-y border-slate-200 dark:border-zink-500">
                                    {% if row.video_urls %}
                                    <button class="p-1 text-xs font-medium rounded-md bg-green-500 text-white play-video-btn" 
                                            data-videos='{{ row.video_urls | tojson }}' 
                                            data-tailwind-url="{{ url_for('static', filename='css/tailwind.css') }}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" 
                                             viewBox="0 0 24 24" fill="none" stroke="currentColor" 
                                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
                                             class="lucide lucide-play">
                                             <polygon points="5 3 19 12 5 21 5 3"/>
                                        </svg>
                                    </button>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endfor %}
        {% else %}
            <p class="mt-6 text-center text-slate-600 dark:text-zink-200">No detailed areawise data available.</p>
        {% endif %}
    </div>
</div>
{% else %}
<div class="card">
    <div class="card-body">
        <p class="text-center text-slate-600 dark:text-zink-200">No Areawise data available for the selected filters.</p>
    </div>
</div>
{% endif %}

<!-- Load ApexCharts -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const colorsMap = {
        ones: "rgba(59,130,246,0.7)",   // blue
        twos: "rgba(139,92,246,0.7)",   // purple
        fours: "rgba(34,197,94,0.7)",   // green
        sixes: "rgba(239,68,68,0.7)",   // red
        runs: "rgba(234,179,8,0.7)"     // yellow
    };

    // Main Areawise bar chart
   // Main Areawise bar chart
document.querySelectorAll(".apex-charts").forEach(function (el) {
    try {
        const chartData = JSON.parse(el.dataset.chartData);

        const options = {
            chart: { 
                type: "bar", 
                height: chartData.height || 350, 
                toolbar: { show: false }
            },
            plotOptions: {
                bar: {
                    horizontal: true,
                    barHeight: "60%",
                    dataLabels: {
                        position: "center"  // ðŸ‘ˆ put labels inside the bar
                    }
                }
            },
            dataLabels: {
                enabled: true,
                formatter: function (val) { return val; }, // show value (count)
                style: {
                    colors: ["#fff"], // white text inside
                    fontSize: "13px",
                    fontWeight: "bold"
                },
                dropShadow: {
                    enabled: true,
                    top: 1,
                    left: 1,
                    blur: 1,
                    opacity: 0.5
                }
            },
            colors: [
                "rgba(0, 143, 251, 0.85)",   // blue
                "rgba(0, 227, 150, 0.85)",   // green
                "rgba(254, 176, 25, 0.85)",  // orange
                "rgba(255, 69, 96, 0.85)"    // red
            ],
            series: chartData.series || [],
            xaxis: { categories: chartData.labels || [] },
            title: { text: chartData.title || "", align: "center" },
            legend: { position: "top" }
        };

        new ApexCharts(el, options).render();
    } catch (e) { 
        console.error("Error rendering chart for", el, e); 
    }
});

    // Inline bar charts inside table
    document.querySelectorAll(".shot-bar").forEach(function (el) {
        try {
            const chartData = JSON.parse(el.dataset.chartData);
            const type = el.dataset.type;

            const options = {
                chart: {
                    type: "bar",
                    height: 24,
                    sparkline: { enabled: true }
                },
                plotOptions: {
                    bar: {
                        horizontal: true,
                        columnWidth: "80%",
                        dataLabels: { position: "center" }
                    }
                },
                colors: [colorsMap[type] || "rgba(100,100,100,0.6)"],
                series: chartData.series,
                dataLabels: {
                    enabled: true,
                    formatter: function (val) { return val; },
                    style: {
                        colors: ["#fff"],
                        fontSize: "10px",
                        fontWeight: "bold"
                    }
                },
                tooltip: { enabled: false },
                xaxis: {
                    labels: { show: false },
                    axisBorder: { show: false },
                    axisTicks: { show: false }
                },
                yaxis: { labels: { show: false } }
            };

            new ApexCharts(el, options).render();
        } catch (e) { console.error("Error rendering shot-bar", e); }
    });
});
</script>
